<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_wheel_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/adapter_flow_account_icon_default" />

    <LinearLayout
        android:id="@+id/adapter_wheel_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/adapter_flow_more"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_wheel_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.00"
            android:textColor="#ef3030"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/adapter_wheel_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.00"
            android:textColor="#00ff00"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>